{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["./node_modules/*", "*"]
    },
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "types": [ "node" ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": ["ESNext"],
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  }
}
